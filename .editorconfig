# http://editorconfig.org

root = true

[*]
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.{py,rst,ini}]
indent_style = space
indent_size = 4

[*.py]
line_length=119
multi_line_output=3

[*.{html,css,scss,json,js}]
indent_size = 4
indent_style = space

[*.yml]
indent_size = 2

[*.md]
line_length=120
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
